# `type skhd --observe` in a terminal and type a key to get keycode

# toggle window fullscreen zoom
ctrl + cmd - 0x2F : yabai -m window --toggle zoom-fullscreen # ctrl + cmd - .

# increase window size
ctrl + cmd - h : yabai -m window --resize left:-20:0
ctrl + cmd - j : yabai -m window --resize bottom:0:20
ctrl + cmd - k : yabai -m window --resize top:0:-20
ctrl + cmd - l : yabai -m window --resize right:20:0

# move window to adjacent space
ctrl + cmd - left : yabai -m window --space prev
ctrl + cmd - right : yabai -m window --space next

# move focus between monitors
ctrl + cmd - 0x18 : yabai -m window --display 2 # +
ctrl + cmd - 0x1B : yabai -m window --display 1 # -

# rebalance windows in a space
ctrl + cmd - b : yabai -m space --balance

# rotate windows around space with `[` and `]`
ctrl + cmd - 0x21 : yabai -m space --rotate 90
ctrl + cmd - 0x1E : yabai -m space --rotate 270

# cycle focus between windows
ctrl + cmd - space : yabai -m window --focus next || yabai -m window --focus first

# open terminal
ctrl + cmd - return : /Applications/Kitty.app/Contents/MacOS/kitty --single-instance -d ~ &> /dev/null

